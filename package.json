{
  "name": "cartdrop-api-new",
  "version": "1.0.0",
  "description": "Cartdrop rest api created using node, typescript, express and postgreSQL",
  "main": "dist/app.js",
  "scripts": {
    "test": "jest .",
    "test-watch": "jest --watch-all",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc -p . && cp -R src/config/db/data dist/config/db/data && cp -R src/config/db/migrations dist/config/db/migrations",
    "lint": "eslint .",
    "pretty": "npx prettier --write ."
  },
  "author": "Afzal Saiyed",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "pg": "^8.7.3",
    "postgres-migrations": "^5.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.2",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint"
    }
  }
}
